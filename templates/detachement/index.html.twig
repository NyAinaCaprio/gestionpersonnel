{% extends 'base.html.twig' %}

{% block title %}Detachement index{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Detachement index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for detachement in detachements %}
            <tr>
                <td>{{ detachement.id }}</td>
                <td>{{ detachement.name }}</td>
                <td>
                    <a href="{{ path('detachement_show', {'id': detachement.id}) }}">show</a>
                    <a href="{{ path('detachement_edit', {'id': detachement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('detachement_new') }}">Create new</a>
</div>
{% endblock %}
