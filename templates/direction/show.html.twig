{% extends 'base.html.twig' %}

{% block title %}Direction{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Direction</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ direction.id }}</td>
            </tr>
            <tr>
                <th>Direction</th>
                <td>{{ direction.direction }}</td>
            </tr>
            </tbody>
        </table>

        <div class="text-right">
            <a class="btn btn-info" href="{{ path('direction_index') }}">Retour</a>
        </div>

        <a class="btn btn-success" href="{{ path('direction_edit', {'id': direction.id}) }}">Modifier</a>

        {{ include('direction/_delete_form.html.twig') }}
    </div>
{% endblock %}
