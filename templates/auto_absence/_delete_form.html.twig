<form method="post" action="{{ path('auto_absence_delete', {'id': auto_absence.id}) }}" onsubmit="return confirm('Vous êtes sûr de vouloir supprimer ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ auto_absence.id) }}">
    <hr>
    <div class="text-right">
        <button style="display: inline-list-item" class="btn btn-danger">Supprimer</button>
    </div>
</form>
